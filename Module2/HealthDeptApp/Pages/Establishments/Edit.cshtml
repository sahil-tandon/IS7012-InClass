@page
@model HealthDeptApp.Pages.Establishments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Establishment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Establishment.Id" />
            <div class="form-group">
                <label asp-for="Establishment.Name" class="control-label"></label>
                <input asp-for="Establishment.Name" class="form-control" />
                <span asp-validation-for="Establishment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.Score" class="control-label"></label>
                <input asp-for="Establishment.Score" class="form-control" />
                <span asp-validation-for="Establishment.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Establishment.HasLiquorLicense" /> @Html.DisplayNameFor(model => model.Establishment.HasLiquorLicense)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.OpenDate" class="control-label"></label>
                <input asp-for="Establishment.OpenDate" class="form-control" />
                <span asp-validation-for="Establishment.OpenDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.ClosedDate" class="control-label"></label>
                <input asp-for="Establishment.ClosedDate" class="form-control" />
                <span asp-validation-for="Establishment.ClosedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.CategoryId" class="control-label"></label>
                <select asp-for="Establishment.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Establishment.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
